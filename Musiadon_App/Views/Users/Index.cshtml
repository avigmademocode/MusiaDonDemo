
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<script src="~/AngularJs/Users/jsUsersController.js"></script>
<script src="~/AngularJs/Users/jsUserFactory.js"></script>

<script src="~/Scripts/kendo/2012.3.1114/kendo.web.min.js"></script>
<link href="~/kendocss/kendo.common.min.css" rel="stylesheet" />
<link href="~/kendocss/kendo.metro.min.css" rel="stylesheet" />


<h2>Users Details</h2>
<div ng-controller="UsersController">

    <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div class="panel-body">
                        <form ng-submit="submitform()" name="form">

                            <div class="table-responsive">
                                <table class="table table-bordered table-hover" id="Usertbl">
                                    <thead>
                                        <tr>
                                            <th>SNo</th>
                                            <th hidden>User Id</th>
                                            <th>User Name</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>Password</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="Item in UserList">
                                            <td>{{ $index + 1 }}</td>
                                            <td hidden>{{ Item.UserId }}</td>
                                            <td>{{Item.UserName}}</td>
                                            <td>{{Item.FirstName}}</td>
                                            <td>{{ Item.LastName}}</td>
                                            <td>{{ Item.EmailId}}</td>
                                            <td>{{Item.MobileNumber}}</td>
                                            <td>{{Item.Password}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
</div>


