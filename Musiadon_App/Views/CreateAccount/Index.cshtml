    <title>Registration</title>
    <!-- Bootstrap core CSS -->
    <link href="~/PScript/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/PScript/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/PScript/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
